{
  "name": "kommiter-ia",
  "version": "1.0.1",
  "type": "module",
  "description": "Crea tus commit con IA y escoge con que IA quieres trabajar",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "node --loader --watch ts-node/esm src/index.ts",
    "migration:generate": "prisma migrate dev --name",
    "postinstall": "prisma migrate dev --name auto && echo 'alias kommit=\"node --loader ts-node/esm $HOME/node_modules/kommiter-ia/src/index.ts\"' >> ~/.bashrc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/google": "^0.0.39",
    "@ai-sdk/openai": "^0.0.48",
    "@prisma/client": "5.18.0",
    "ai": "^3.3.9",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
